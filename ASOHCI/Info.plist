		<!-- Actual PCI matching service -->
			<key>ASOHCIService</key>
			<dict>
			<key>CFBundleIdentifierKernel</key>
			<string>com.apple.kpi.iokit</string>
			<key>IOClass</key>
			<string>IOUserService</string>
				<key>IOUserClass</key>
				<string>ASOHCI</string>
				<key>IOUserServerName</key>
				<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
				<key>IOProviderClass</key>
				<string>IOPCIDevice</string>
				<!-- Required for Thunderbolt-tunneled PCI devices -->
				<key>IOPCITunnelCompatible</key>
				<true/>
				
				<!-- Match the Agere/LSI FW800 controller precisely -->
				<key>IOPCIMatch</key>
				<string>0x590111c1</string>
			
				<!-- Optional safety net: class match for IEEE1394 OHCI (disable for now) -->
				<!--
				<key>IOPCIClassMatch</key>
				<string>0x0c0010&amp;0xffffff</string>
				-->
				<key>IOProbeScore</key>
				<integer>65530</integer>
			</dict>
	</dict>
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>CFBundleVersion</key>
	<string>51</string>
	<key>OSBundleUsageDescription</key>
	<string>AS FireWire Driver for development and testing</string>
</dict>
